<?xml version="1.0" encoding="utf-8"?>

<scene>
	<integrator type="ao"/>
	
	<sampler type="independent">
		<integer name="sampleCount" value="128"/>
	</sampler>

	<camera type="perspective">
		<transform name="toWorld">
			<lookat origin="0, 0, 40" target="0, 0, 0" up="0, 1, 0"/>
		</transform>
		<rfilter type="mitchell">
			<float name="radius" value="4.0"/>
		</rfilter>
		<float name="fov" value="50.6"/>
		<integer name="width" value="512"/>
		<integer name="height" value="512"/>
	</camera>
	
	<!-- left(red) -->
	<shape type="sphere">
		<float name="radius" value="1e5"/>
		<point name="center" value="-100010, 0, 0"/>
		<color name="diffuse" value="0.75, 0.25, 0.25"/>
	</shape>
	
	<!-- right(blue) -->
	<shape type="sphere">
		<float name="radius" value="1e5"/>
		<point name="center" value="100010, 0, 0"/>
		<color name="diffuse" value="0.25, 0.25, 0.75"/>
	</shape>
	
	<!-- front[green:0.25, 0.75, 0.25] -->
	<shape type="sphere">
		<float name="radius" value="1e5"/>
		<point name="center" value="0, 0, -100010"/>
		<color name="diffuse" value="0.25, 0.75, 0.25"/>
	</shape>
	
	<!-- bottom[yellow:0.75, 0.75, 0.0] -->
	<shape type="sphere">
		<float name="radius" value="1e5"/>
		<point name="center" value="0, -100010, 0"/>
		<color name="diffuse" value="0.75, 0.75, 0.75"/>
	</shape>

	<!-- top[cyan:0.0, 0.75, 0.75] -->
	<shape type="sphere">
		<float name="radius" value="1e5"/>
		<point name="center" value="0, 100010, 0"/>
		<color name="diffuse" value="0.75, 0.75, 0.75"/>
	</shape>
</scene>
